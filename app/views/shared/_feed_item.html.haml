%tr
  = link_to gravatar_for(feed_item.user), feed_item.user
  %td
    = feed_item.content
  %td
    = feed_item.status_for_display
    - if feed_item.not_started?
      = link_to "開始", project_task_start_path(feed_item, @project), method: :start, class: "btn btn-primary btn-sm"
    - if feed_item.working?
      = link_to "完了", project_task_finish_path(feed_item, @project), method: :finish, class: "btn btn-primary btn-sm"
  %td
    = link_to "削除", project_task_path(feed_item, @project), method: :delete, data: { confirm: "You sure?" }, title: feed_item.content, class: "btn btn-primary btn-sm"