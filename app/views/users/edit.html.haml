- provide(:title, "Edit user")
%h1 Update your profile
.row
  .span6.offset3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object
      = image_tag @user.image.to_s
      = f.label :name, "ユーザー名"
      = f.text_field :name
      = f.label :email, "メールアドレス"
      = f.text_field :email
      = f.label :password, "パスワード"
      = f.password_field :password
      = f.label :password_confirmation, "パスワード（確認用）"
      = f.password_field :password_confirmation
      = f.label :image, "ユーザー画像"
      = f.file_field :image
      = f.submit "保存する", class: "btn btn-large btn-primary"
    = form_tag(upload_image_user_path, class: 'dropzone', id: 'upload-dropzone') do
      .fallback
        file_field_tag 'attachment[file]'